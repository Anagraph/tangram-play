{
  "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "L": true,
    "Modernizr": true,
    "describe": true,
    "it": true,
    "sinon": true,
    "_": true,
    "before": true,
    "beforeEach": true,
    "afterEach": true
  },
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "block-scoped-var": 2,
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "camelcase": [2, { "properties": "always" }],
    "comma-style": [2, "last"],
    "curly": [ 2, "all"],
    "dot-notation": 0,
    "eol-last": 2,
    "eqeqeq": 2,
    "indent": [2, 4, { "SwitchCase": 1 }],
    "key-spacing": 0,
    "linebreak-style": [2, "unix"],
    "new-cap": 2,
    "no-caller": 2,
    "no-cond-assign": [2, "except-parens"],
    "no-empty": 2,
    "no-eq-null": 2,
    "no-extend-native": 2,
    "no-implicit-coercion": [2, { "number": true, "boolean": true, "string": true }],
    "no-loop-func": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-spaces": 2,
    "no-multiple-empty-lines": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-unused-expressions": 2,
    "no-unused-vars": [1, { "args": "none" }],
    "one-var-declaration-per-line": [ 2, "initializations"],
    "padded-blocks": [2, "never"],
    "quote-props": [2, "as-needed"],
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"],
    "space-before-blocks": [2, "always"],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "space-unary-ops": [2, { "words": false, "nonwords": false }],
    "strict": 0,
    "valid-typeof": 2,
    "wrap-iife": 2,
    "yoda": [ 2, "never"]
  }
}
