# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{css,html,json}]
indent_size = 2

[{circle.yml,.eslintrc,.eslintrc-legacy,.stylelintrc,gulpfile.js,karma.conf.js}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{Makefile,makefile}]
indent_style = tab
